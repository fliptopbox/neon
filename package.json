{
  "name": "neon-admin-api",
  "version": "1.0.0",
  "description": "Database admin website with public API using Cloudflare Workers",
  "type": "module",
  "scripts": {
    "dev:api": "wrangler dev",
    "dev:admin": "vite",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:admin\"",
    "build:api": "esbuild src/api/index.ts --bundle --outfile=dist/api/index.js --format=esm --platform=neutral --target=es2022 --external:node:*",
    "build:admin": "VITE_API_URL=https://neon-api-production.fliptopbox.workers.dev vite build --mode production",
    "build": "npm run build:api && npm run build:admin",
    "deploy:api": "wrangler deploy --env production",
    "deploy:admin": "wrangler pages deploy dist/admin --project-name=neon-admin",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset.js",
    "db:full-reset": "node scripts/full-reset-import.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.6",
    "@mui/material": "^7.3.6",
    "@neondatabase/serverless": "^0.9.5",
    "@netlify/functions": "^5.1.1",
    "@tsndr/cloudflare-worker-jwt": "^3.2.0",
    "bcryptjs": "^2.4.3",
    "city-timezones": "^1.3.2",
    "dotenv": "^16.6.1",
    "fastest-levenshtein": "^1.0.16",
    "hono": "^4.10.8",
    "jsonwebtoken": "^9.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251213.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.26",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.20.2",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vitest": "^1.6.1",
    "wrangler": "^4.54.0"
  }
}
